<p id="notice"><%= notice %></p>

<h1>Payment Instruments</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Client</th>
      <th>Customer</th>
      <th>Billing contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_instruments.each do |payment_instrument| %>
      <tr>
        <td><%= payment_instrument.type %></td>
        <td><%= payment_instrument.client_id %></td>
        <td><%= payment_instrument.customer_id %></td>
        <td><%= payment_instrument.billing_contact %></td>
        <td><%= link_to 'Show', payment_instrument %></td>
        <td><%= link_to 'Edit', edit_payment_instrument_path(payment_instrument) %></td>
        <td><%= link_to 'Destroy', payment_instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

